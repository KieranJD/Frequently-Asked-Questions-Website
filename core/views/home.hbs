{{> header}}

    <main>
        <form action="#">
            <input type="text" placeholder="Search..." name="search" class="search" value="{{query}}">
            <button type="submit"><i class="fa fa-search"></i></button>
        </form>

        {{#each questions}}
        <article class="question">
            {{#if solved}}
            <p>Solved</p>
            {{/if}}
            <img class = "thumb" src="images/questions/thumb/{{ id }}/{{ image }}" alt="thumbnail"> 
            <h2>{{ title }}</h2>
            <br>
            <br><h3>{{body}}</h3>
            <small class="user">{{ user_id }}</small>
            <small class="date">{{ date }}</small>
        </article>
        {{/each}}        
    </main>

{{> footer }}